    <script>
        // Chart
        const ctx = document.getElementById('performanceChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Agustus', 'September', 'Oktober', 'November', 'Desember', 'Januari'],
                datasets: [{
                    label: 'Rata-rata Kinerja',
                    data: [85, 87, 90, 88, 92, 91],
                    borderColor: '#667eea',
                    backgroundColor: 'rgba(102, 126, 234, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: true }
                },
                scales: {
                    y: { beginAtZero: false, min: 80, max: 100 }
                }
            }
        });

        function showDemo(feature) {
            alert('DEMO: Fitur "' + feature + '" akan ditampilkan di aplikasi lengkap.\n\nIni adalah preview tampilan dashboard.');
        }
    </script>
